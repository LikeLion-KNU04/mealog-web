// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId    String   @id @default(cuid())
  name      String
  email     String?  @unique
  birthDate DateTime
  gender    String
  phone     String?  @unique
  height    Int
  weight    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  meals     Meal[]
}

model Meal {
  mealId    String     @id @default(cuid())
  userId    String
  user      User       @relation(fields: [userId], references: [userId])
  date      DateTime
  type      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  mealItems MealItem[]

  @@index([userId])
}

model MealItem {
  mealItemId       String            @id @default(cuid())
  mealId           String
  meal             Meal              @relation(fields: [mealId], references: [mealId])
  imageName        String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  mealItemAnalysis MealItemAnalysis?

  @@index([mealId])
}

model MealItemAnalysis {
  mealItemAnalysisId String   @id @default(cuid())
  mealItemId         String   @unique
  mealItem           MealItem @relation(fields: [mealItemId], references: [mealItemId])

  classId    Int
  className  String
  confidence Float

  amount       Float
  kcal         Float
  carbohydrate Float
  sugar        Float
  fat          Float
  protein      Float
  calcium      Float
  phosphorus   Float
  natrium      Float
  kalium       Float
  magnesium    Float
  iron         Float
  zinc         Float
  cholesterol  Float
  transfat     Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([mealItemId])
}
